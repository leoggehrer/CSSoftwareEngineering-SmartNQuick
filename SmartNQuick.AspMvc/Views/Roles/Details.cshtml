@*@BaseCode*@
@*#if ACCOUNT_ON*@
@*
@{
    @using Microsoft.AspNetCore.Mvc.Rendering
    @using SmartNQuick.AspMvc.Modules.Session
    @using SmartNQuick.AspMvc.Modules.Handler
    @using SmartNQuick.AspMvc.Modules.Language
    @using SmartNQuick.AspMvc.Models.Modules.View
    @model SmartNQuick.AspMvc.Models.Persistence.Account.Role

    var sessionWrapper = new SessionWrapper(Context.Session);
    var controller = ViewContext.RouteData.Values["controller"].ToString();
    var action = ViewContext.RouteData.Values["action"].ToString();
    Func<string, string> translate = Translator.TranslateIt;
    Func<string, string> translateFor = pn => translate($"{controller}.{pn}");
    var title = translateFor(action);

    ViewData["Title"] = title;

    <h1>@title</h1>

    <div class="d-flex bg-transparent">
        <div class="p-sm-2 mr-auto">
            <h4>@translate(controller)</h4>
        </div>
    </div>
    <hr />

    @if (string.IsNullOrEmpty(ErrorHandler.LastError) == false)
    {
        <div class="alert alert-danger" role="alert">
            @ErrorHandler.GetLastErrorAndClear()
        </div>
    }

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Assigned)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Assigned)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Designation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Designation)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
    </div>
    <div class="d-flex bg-transparent">
        <div class="p-sm-2 mr-auto">
        </div>
        <div class="p-sm-2">
            <a asp-action="Index" class="btn btn-outline-dark" style="min-width: 8em;">@translateFor("Back to List")</a>
        </div>
        <div class="p-sm-2">
            @Html.ActionLink(translateFor("Edit"), "Edit", new { id = Model.Id }, new { @class = "btn btn-secondary", style = "min-width: 8em;" })
        </div>
    </div>

}
*@
@*#endif*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
